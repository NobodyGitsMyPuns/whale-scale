# Multi-stage build for better caching
FROM nvidia/cuda:11.8.0-runtime-ubuntu22.04 AS base

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1
ENV MODELS_DIR=/models
ENV OUTPUT_DIR=/output

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-dev \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip
RUN pip3 install --upgrade pip setuptools wheel

WORKDIR /app

# Dependencies stage - this layer will be cached unless requirements change
FROM base AS dependencies
COPY image-service-requirements.txt .
RUN pip3 install --no-cache-dir -r image-service-requirements.txt

# Final stage
FROM dependencies AS final

# Copy the image generation service (this layer changes frequently)
COPY image_generation_service.py ./image_generation_service.py

# Create directories for models and output
RUN mkdir -p /models /output

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/ || exit 1

# Run the service
CMD ["python3", "image_generation_service.py"] 